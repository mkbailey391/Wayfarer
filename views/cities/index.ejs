<div class="container">
    <% places.forEach(p => { %>
<div class="row">
        <div class="col s12 m7">
          <div class="card">
            <div class="card-image">
              <img src="<%= p.picture %>">
              <span class="card-title"><%= p.city %></span>
              <a class="btn-floating halfway-fab wave-effect waves-light red"><i class="material-icons">+</i></a>
            </div>
            <div class="card-content">
              <p>I am a very simple card. I am good at containing small bits of information.
              I am convenient because I require little markup to use effectively.</p>
            </div>
            <div class="card-action">
              <a href="/cities/<%= p._id %>">Posts</a>
            </div>
          </div>
        </div>
    </div>  
    <% }) %>
</div>
