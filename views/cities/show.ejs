<div class="container">
<h1><%= place.city %></h1>
<img src="<%= place.picture %>"/>
<a href= "/cities/<%= place._id %>/posts/new"<button class="btn waves-effect waves-light" type="submit" name="action">Add a post</button></a>
<% place.posts.forEach (p => { %>
<div class="row">
        <div class="col s12 m6">
          <div class="card grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= p.title %></span>
              <p><%= p.body %></p>
              <div class="card-action">
                    <a href="/cities/<%= place._id %>/posts/<%= p._id %>">See Post</a>
                    <a href="#">Delete Post</a>
                  </div>
            </div>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
    </div>







