<div class="container">
<h1><%= place.city %></h1>
<img src="<%= place.picture %>"/>
<a href= "/cities/<%= place._id %>/posts/new" class="btn waves-effect waves-light" type="submit" name="action">Add a post</a>
<% place.posts.forEach (p => { %>
<div class="row">
        <div class="col s12 m6">
          <div class="card grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= p.title %></span>
              <p><%= p.body %></p>

              <% if (loggedIn){ %>
              <div class="card-action">
                    <a href="/cities/<%= place._id %>/posts/<%= p._id %>">See More</a>
                    <a href="/cities/<%= place._id %>/posts/<%= p._id %>/edit">Edit</a>
                    <a href=='/cities/<%= place._id %>/posts/<%= p._id %>?_method=DELETE' method="POST" action='/cities/<%= place._id %>/posts/<%= p._id %>?_method=DELETE'></a>
                </div>
                <% } %>
            </div>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
    </div>







